<Page
    x:Class="NewsForum.Pages.EditorPublication.FirstStepPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewsForum.Pages.EditorPublication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Transitions="{StaticResource BaseAnimation}">

    <Page.Resources>
        <x:String x:Key="TitlePageString">Выберите тип публикации</x:String>
    </Page.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{StaticResource TitlePageString}"
                   Style="{StaticResource SubheaderTextBlockStyle}"/>

        <FlipView Grid.Row="1"
                  Margin="5"                
                  SelectedIndex="0"
                  Background="{x:Null}">
            <FlipViewItem>
                <StackPanel>
                    <TextBlock Text="Игры"
                               Style="{StaticResource SubheaderTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource BaseMiddleMenuIconTextBlockStyle}"
                           Text=""
                           FontSize="200"/>
                </StackPanel>
            </FlipViewItem>
            <FlipViewItem>
                <StackPanel>
                    <TextBlock Text="Фильмы"
                               Style="{StaticResource SubheaderTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource BaseMiddleMenuIconTextBlockStyle}"
                           Text=""
                           FontSize="200"/>

                </StackPanel>
            </FlipViewItem>
            <FlipViewItem>
                <StackPanel>
                    <TextBlock Text="Музыка"
                               Style="{StaticResource SubheaderTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource BaseMiddleMenuIconTextBlockStyle}"
                           Text=""
                           FontSize="200"/>
                </StackPanel>
            </FlipViewItem>
            <FlipViewItem>
                <StackPanel>
                    <TextBlock Text="Статья"
                               Style="{StaticResource SubheaderTextBlockStyle}"/>
                    <TextBlock Style="{StaticResource BaseMiddleMenuIconTextBlockStyle}"
                           Text=""
                           FontSize="200"/>
                </StackPanel>
            </FlipViewItem>
        </FlipView>

    </Grid>
</Page>

