<Page x:ConnectionId='1'
    x:Class="NewsForum.Pages.EditorPublication.SecondStepPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewsForum.Pages.EditorPublication"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Converters="using:NewsForum.View.Converters"
    xmlns:UserControls="using:NewsForum.View.MyUserControls"
    xmlns:Publication="using:ViewModelDataBase.VMPublicationTypes"
    xmlns:I="using:Microsoft.Xaml.Interactivity"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:vmpublicationtypes="using:ViewModelDataBase.VMPublicationTypes"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    Transitions="{StaticResource BaseAnimation}">

    <Page.Resources>
        <Converters:HideControlsConverter x:Key="HideControlsConverter"/>
        <Converters:IntToTypePublicationConverter x:Key="IntToTypePublicationConverter"/>
        <x:String x:Key="TitlePageString">Название и обложка</x:String>
    </Page.Resources>

    <Grid ChildrenTransitions="{StaticResource BaseChildrenAnimation}"
          Margin="{StaticResource BaseMainGridThickness}">


        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="Mobile">
                    <VisualState.Setters>
                        <Setter Target="flip.(Grid.Row)" Value="1"/>
                        <Setter Target="flip.(Grid.Column)" Value="0"/>
                        <Setter Target="flip.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="flip.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="TitlePublicationTextBox.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="TitlePublicationTextBox.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="flip.Margin" Value="0 10 0 0"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="Desktop">
                    <VisualState.Setters>
                        <Setter Target="TitlePublicationTextBox.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="TitlePublicationTextBox.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="flip.(Grid.Row)" Value="0"/>
                        <Setter Target="flip.(Grid.Column)" Value="1"/>
                        <Setter Target="flip.(Grid.RowSpan)" Value="1"/>
                        <Setter Target="flip.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="TitlePublicationTextBox.(Grid.Column)" Value="0"/>
                        <Setter Target="flip.Margin" Value="10 0 0 0"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <TextBlock Grid.Row="0"
                   Text="{StaticResource TitlePageString}"
                   Style="{StaticResource SubheaderTextBlockStyle}"/>


        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0 10 0 0">


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <TextBox x:ConnectionId='5' Name="TitlePublicationTextBox"
                         Grid.Row="0"
                                                                       
                         VerticalAlignment="Bottom"
                         PlaceholderText="Название"
                         Style="{StaticResource BaseTextBoxStyle}"/>

                <ComboBox x:ConnectionId='6' Name="flip"
                          FontSize="20"
                                                                                                                                                     
                          Grid.Column="1">
                    <ComboBox.Header>
                        <TextBlock Text="Выберите тип публикации"
                                   Style="{StaticResource BaseMenuTextBlockStyle}"/>
                    </ComboBox.Header>
                    <ComboBoxItem FontSize="20">
                        <StackPanel Margin="5 0 0 0"
                                    Orientation="Horizontal">
                            <TextBlock Style="{StaticResource BaseSmallMenuIconTextBlockStyle}"
                                       Text=""
                                       Margin="0 0 10 0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Игры"
                                       Style="{StaticResource BaseMenuTextBlockStyle}"/>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem FontSize="20">
                        <StackPanel Margin="5 0 0 0"
                                    Orientation="Horizontal">
                            <TextBlock Style="{StaticResource BaseSmallMenuIconTextBlockStyle}"
                                       Text=""       
                                       Margin="0 0 10 0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Фильмы"
                                       Style="{StaticResource BaseMenuTextBlockStyle}"/>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem FontSize="20">
                        <StackPanel Margin="5 0 0 0"
                                    Orientation="Horizontal">
                            <TextBlock Style="{StaticResource BaseSmallMenuIconTextBlockStyle}"
                                       Text=""
                                       Margin="0 0 10 0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Музыка"
                                       Style="{StaticResource BaseMenuTextBlockStyle}"/>

                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem FontSize="20">
                        <StackPanel Margin="5 0 0 0"
                                    Orientation="Horizontal">
                            <TextBlock Style="{StaticResource BaseSmallMenuIconTextBlockStyle}"
                                       Text=""
                                       Margin="0 0 10 0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Статья"
                                       Style="{StaticResource BaseMenuTextBlockStyle}"/>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>

                <Grid Grid.Row="2"
                      Grid.ColumnSpan="2"
                      AllowDrop="True">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.ColumnSpan="3"
                               Text="Обложка"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Style="{StaticResource SubheaderTextBlockStyle}"/>

                    <UserControls:AddCoverPublicationUserControl x:ConnectionId='7' Grid.Column="0"
                                                                 Grid.ColumnSpan="3"
                                                                 Grid.Row="1"
                                                                                                                                     
                                                                 Grid.RowSpan="2"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

